{
  "_comment": "Build with `packer build ubuntu.json`",
  "builders": [
      {
          "type": "qemu",
          "iso_checksum": "{{user `iso_checksum`}}",
          "iso_url": "{{user `iso_url`}}",
          "disk_size": "{{user `disk_size`}}",
          "disk_image": true,
          "format": "qcow2",
          "disk_compression": true,
          "headless": true,
          "output_directory": "output-ubuntu",
          "shutdown_command": "echo '{{user `ssh_password`}}' | sudo -t -S /sbin/shutdown -P now",
          "ssh_password": "{{user `ssh_password`}}",
          "ssh_timeout": "5m",
          "ssh_username": "{{user `ssh_username`}}",
          "ssh_pty": true,
          "ssh_handshake_attempts": "20",
          "vm_name": "{{user `name`}}{{user `version`}}.qcow2",
          "accelerator": "kvm",
          "use_default_display": true,
          "vnc_bind_address": "0.0.0.0",
          "qemuargs": [
              [
                  "-machine",
                  "accel=kvm"
              ],
              [
                "-m",
                "{{user `ram`}}M"
              ],
              [
                  "-fda",
                  "my-seed.img"
              ]
          ]
      }
  ],
  "provisioners": [
    {
      "execute_command": "{{ .Vars }} sudo -E bash '{{ .Path }}'",
      "inline": [
        "sudo apt update 2>&1 >/dev/null",
        "sudo apt -qq -y install software-properties-common git ansible 2>&1 >/dev/null",
        "sed -i s/ens3/enp1s0/g /etc/netplan/50-cloud-init.yaml"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "cpu": "1",
    "disk_size": "8000",
    "ram": "2048",
    "domain": "local",
    "hostname": "xavki",
    "iso_checksum": "f16a309ec62e7abb89aa577e9b0a0523c4c2a439ed132e68cf22c00c07d90b67",
    "iso_url": "https://cloud-images.ubuntu.com/jammy/20230816/jammy-server-cloudimg-amd64.img",
    "name": "ubuntu",
    "version": "22",
    "ssh_password": "ubuntu",
    "ssh_username": "ubuntu"
  }

}
